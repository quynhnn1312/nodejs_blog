<div class="mt-4">
  <h3>Chỉnh sửa khóa học</h3>

  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group mb-3">
      <label for="name">Cập nhật khóa học</label>
      <input type="text" class="form-control" value="{{course.name}}" name="name" placeholder="tên khóa học">
    </div>

    <div class="form-group mb-3">
      <label for="description">Mô tả khóa học</label>
      <textarea class="form-control" name="description">{{course.description}}</textarea>
    </div>

    <div class="form-group mb-3">
      <label for="videoId">Video khóa học</label>
      <input type="text" class="form-control" value="{{course.video}}" name="videoId" placeholder="video khóa học">
    </div>

    <div class="form-group mb-3">
      <label for="level">Level khóa học</label>
      <input type="text" class="form-control" value="{{course.level}}" name="level" placeholder="level khóa học">
    </div>

    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>