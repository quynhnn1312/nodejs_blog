<div class="mt-4">
  <h3>Đăng khóa học</h3>

  <form method="POST" action="store">
    <div class="form-group mb-3">
      <label for="name">Tên khóa học</label>
      <input type="text" class="form-control" name="name" placeholder="tên khóa học">
    </div>

    <div class="form-group mb-3">
      <label for="description">Mô tả khóa học</label>
      <input type="text" class="form-control" name="description" placeholder="mô tả khóa học">
    </div>

    <div class="form-group mb-3">
      <label for="videoId">Video khóa học</label>
      <input type="text" class="form-control" name="videoId" placeholder="video khóa học">
    </div>

    <div class="form-group mb-3">
      <label for="level">Level khóa học</label>
      <input type="text" class="form-control" name="level" placeholder="level khóa học">
    </div>

    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
  </form>
</div>